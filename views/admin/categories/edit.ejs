<%- include ('../../partials/header.ejs') %> 
<body>
    <%- include ('../../partials/navbar.ejs') %> 
    <div class="container mt-3">

        <h3 class="display-4 border-bottom pb-1">Editar categoria</h3>

        <form method="POST" action="/categories/update" class="mt-3">
            <div class="row form-group">
                <label for="title" class="col-form-label col-1">Título novo</label>
                <div class="col-11">
                    <input class="form-control" value="<%= category.title %> " type="text" name="title" placeholder="Defina o título" id="title">
                    <input type="hidden" name="id" value="<%= category.id %> ">
                </div>
            </div>
            <button type="submit" class="btn btn-success d-block ml-auto">Atualizar</button>
        </form>

    </div>
</body>
