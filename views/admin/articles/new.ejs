<%- include ('../../partials/header.ejs') %> 
<body>
    <%- include ('../../partials/navbar.ejs') %> 
    <div class="container mt-3">

        <h3 class="display-4 border-bottom pb-1">Novo artigo</h3>

        <form method="POST" action="/articles/save" class="mt-3">
            <div class="row form-group">
                <label for="title" class="col-form-label col-1">Título</label>
                <div class="col-11">
                    <input class="form-control" type="text" name="title" placeholder="Defina o título" id="title">
                </div>
            </div>
            <div class="row form-group">
                <label for="article" class="col-form-label col-1">Descrição</label>
                <div class="col-11">
                    <textarea name="body" id="article" class="form-control" placeholder="Escreva a descrição" cols="30" rows="20"></textarea>
                </div>
            </div>
            <div class="row form-group">
                <label for="categories" class="col-form-label col-1">Categorias</label>
                <div class="col-11">
                    <select name="categories" id="categories" class="form-control">
                        <option value="-1">Selecione a categoria</option>
                        <% categories.forEach(category => { %>
                            <option value=<%= category.id %>><%= category.title %> </option>
                        <% }) %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success d-block ml-auto">Cadastrar</button>
        </form>

    </div>
</body>
<%- include ('../../partials/footer.ejs') %> 

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language: 'pt_BR' ,
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })
</script>