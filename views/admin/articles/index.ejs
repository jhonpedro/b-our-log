<%- include ("../../partials/header.ejs") %> 
<body>
    <%- include ("../../partials/navbar.ejs") %> 
    <div class="container">
        <div class="row border-bottom mb-3">
            <div class="col-6">
                <h1 class="display-4 pb-1">Artigos</h1>
            </div>
            <div class="col-6">
                <button class="btn btn-outline-dark d-block ml-auto my-4" onclick="window.location.href = '/admin/articles/new'">
                    Fazer novo artigo
                </button>
            </div>
        </div>
    
        <table class="table">
            <thead class="thead-dark">
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </thead>
            <tbody>
                <% articles.forEach(article => { %>
                    <tr>
                        <td><%= article.id %> </td>
                        <td><%= article.title %> </td>
                        <td><%= article.slug %> </td>
                        <td><%= article.category.title %> </td>
                        <td>
                            <button class="btn btn-warning mb-1" onclick="window.location.href = '/admin/articles/edit/<%= article.id %>' ">Editar</button>
                            <form class="d-inline" method="POST" action="/articles/delete" onsubmit="confirmarDelete(event, this)">
                                <input type="hidden" name="id" value="<%= article.id %>">
                                <button class="btn btn-danger">Excluir</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <%- include ("../../partials/modal.ejs", {
        titleModal: 'Excluir artigo?',
        textModal: "Você realmente deseja excluir esse artigo?"
    }) %>
</body>
<%- include ("../../partials/footer.ejs") %> 