<%- include ('../../partials/header.ejs') %> 
<body>
    <%- include ('../../partials/navbar.ejs') %> 
    <div class="container mt-3">

        <h3 class="display-4 border-bottom pb-1">Editar artigo</h3>

        <form method="POST" action="/articles/update" class="mt-3">
            <div class="row form-group">
                <label for="title" class="col-form-label col-1">Título</label>
                <div class="col-11">
                    <input class="form-control" value="<%= articles.title %> " type="text" name="title" placeholder="Defina o título" id="title">
                    <input type="hidden" name="id" value="<%= articles.id %> ">
                </div>
            </div>
            <div class="row form-group">
                <label for="article" class="col-form-label col-1">Descricao</label>
                <div class="col-11">
                    <textarea name="body" id="article" cols="30" rows="15"><%= articles.body %></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-success d-block ml-auto">Atualizar</button>
        </form>

    </div>
</body>
<%- include ('../../partials/footer.ejs') %> 

<script src="/tinymce/tinymce.min.js"></script>
<script>

    tinymce.init({
        language: 'pt_BR',
        selector: '#article',
        plugins: [
            'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]
    })

</script>